<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/');
} %>

<div class="background"></div>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>


  <% if (messages && messages.notice) { %>
    <div class="flash-message">
      <%= messages.notice %>
    </div>
  <% } %>

  <form action="/inv/add-inventory" method="POST" class="add-inventory-form" id="addInventoryForm">
    <div class="form-group">
      <label for="classification_id">Classification:</label>
      <select id="classification_id" name="classification_id" required>
        <option value="">-- Select Classification --</option>
        <% classificationOptions.forEach(option => { %>
          <option value="<%= option.classification_id %>"
            <%= option.classification_id == classification_id ? 'selected' : '' %> >
            <%= option.classification_name %>
          </option>
        <% }) %>
      </select>
    </div>
  
    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" value="<%= inv_make || '' %>" required placeholder="Enter vehicle make" class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" value="<%= inv_model || '' %>" required placeholder="Enter vehicle model" class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input type="number" id="inv_year" name="inv_year" value="<%= inv_year || '' %>" required placeholder="Enter vehicle year" class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" required placeholder="Enter vehicle description" class="form-control"><%= inv_description || '' %></textarea>
    </div>
  
    <div class="form-group">
      <label for="inv_image">Image URL:</label>
      <input type="text" id="inv_image" name="inv_image" value="<%= inv_image || '/images/vehicles/no-image.png' %>" required placeholder="Enter main image URL" class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail URL:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" required placeholder="Enter thumbnail URL" class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" step="0.01" value="<%= inv_price || '' %>" required placeholder="Enter vehicle price" class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_miles">Miles:</label>
      <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles || '' %>" required placeholder="Enter vehicle mileage" class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color" value="<%= inv_color || '' %>" required placeholder="Enter vehicle color" class="form-control" />
    </div>
  
    <button type="submit" class="btn btn-primary">Add Vehicle</button>
  </form>

  <script>
    // Real-time validation logic
    document.addEventListener("DOMContentLoaded", function() {
      const form = document.getElementById("addInventoryForm");
      const inputs = form.querySelectorAll("input, textarea, select");

      // Check if input has at least 3 characters
      function checkTextInput(input) {
        if (input.value.length >= 3) {
          input.style.borderColor = "green";
        } else if (input.value.trim() === "") {
          input.style.borderColor = "red";
        } else {
          input.style.borderColor = "red";
        }
      }

      // Check if number input contains at least one digit
      function checkNumberInput(input) {
        const value = input.value.trim();
        if (value && !isNaN(value) && value >= 1) {
          input.style.borderColor = "green";
        } else {
          input.style.borderColor = "red";
        }
      }

      // Attach listeners for real-time validation
      inputs.forEach(input => {
        if (input.type === "text" || input.type === "textarea") {
          input.addEventListener("input", () => checkTextInput(input));
        } else if (input.type === "number") {
          input.addEventListener("input", () => checkNumberInput(input));
        }
      });
    });
  </script>