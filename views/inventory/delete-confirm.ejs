<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/');
  } %>
  
  <div class="background"></div>
  
  <% if (flashMessage) { %>
    <div class="flash-message">
      <%= flashMessage %>
    </div>
  <% } %>
  
  <p>Confirm Deletion - The delete is permanent.</p>
  
  <!-- Delete Inventory Confirmation Form -->
  <form action="/inv/delete/<%= inv_id %>" method="POST" class="delete-inventory-form">
    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input type="text" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly class="form-control" />
    </div>
  
    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input type="text" id="inv_price" name="inv_price" value="<%= inv_price %>" readonly class="form-control" />
    </div>
  
    <input type="hidden" name="inv_id" value="<%= inv_id %>" />
  
    <button type="submit" class="btn btn-danger">Delete Vehicle</button>
  </form>