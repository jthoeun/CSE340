<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <% res.redirect('/') %>
<% } %>

<div class="background"></div>

<!-- Flash Message -->
<% if (flashMessage) { %>
  <div class="flash-message alert alert-success">
    <%= flashMessage %>
  </div>
<% } %>

<!-- Error Messages -->
<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Review Update Form -->
<h2>Update Your Review for <%= review.inv_make %> <%= review.inv_model %></h2>

<form action="/account/review/update/<%= review.review_id %>" method="POST">
  <div class="form-group">
    <label for="review_text">Review Text</label>
    <textarea id="review_text" name="review_text" rows="4" required><%= review.review_text %></textarea>
  </div>
  
  <!-- Hidden Fields to pass inv_id and account_id -->
  <input type="hidden" name="inv_id" value="<%= review.inv_id %>" />
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />

  <button type="submit" class="btn-primary">Update Review</button>
</form>

<p>
  <a href="/account" class="btn-secondary">Back to Account</a>
</p>